%%% commande générale pour indexer noms propre
\newcommandx{\indexn}[4][1,2,usedefault]{%
	\ifvoirindex%
		\ifnumbering%% si dans section numeroté
			\ledsidenote{#4:#1,#2,#3}%
		\else%
			\marginpar{#4:#1,#2,#3}%
		\fi%
	\fi%
	\ifstrempty{#1}{%
		\ifstrempty{#2}{\index[#4]{#3}}{\index[#4]{#3|see{#2}}}%cas de renvoi
	}{%
		\ifstrempty{#2}{\index[#4]{#3, #1}}{\index[#4]{#3, #1|see{#2}}}%
	}%
}

